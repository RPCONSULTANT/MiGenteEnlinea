@{
    ViewData["Title"] = "Iniciar Sesión";
    Layout = "_LayoutAuth";
}

<div class="login-container animate__animated animate__jello">
    <div id="loginForm" class="login-form animate__animated animate__flipInY">
        <h4 class="text-center">Bienvenido a</h4>
        <a href="/" target="_parent">
            <div style="text-align: center">
                <img src="~/images/logoMiGene.png" alt="Mi Gente en Línea" />
            </div>
        </a>

        <hr />

        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success">
                @TempData["Message"]
            </div>
        }

        <div id="loginAlert" class="alert" style="display: none;"></div>

        <form id="formLogin" onsubmit="return handleLogin(event)">
            <input type="hidden" id="returnUrl" value="@ViewData["ReturnUrl"]" />
            
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" class="form-control" placeholder="Correo electrónico" required />
            </div>

            <div class="form-group">
                <label for="password">Contraseña</label>
                <div class="input-group">
                    <input type="password" id="password" name="password" class="form-control" placeholder="Contraseña" required />
                    <div class="input-group-append">
                        <button id="btnTogglePassword" class="btn btn-outline-secondary" type="button" onclick="togglePasswordVisibility()">
                            <i id="eyeIcon" class="fa fa-eye"></i>
                        </button>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <button type="submit" id="btnLogin" class="btn btn-primary btn-block">
                    <span id="loginSpinner" class="spinner-border spinner-border-sm" style="display: none;" role="status"></span>
                    <span id="loginText">Iniciar sesión</span>
                </button>
            </div>
            <div class="form-group">
                <a href="@Url.Action("Registrar", "Auth")" class="btn btn-secondary btn-block">Crear Nueva Cuenta</a>
            </div>
            <div class="form-group text-center">
                <a href="#" onclick="toggleDivs('loginForm','forgotPasswordForm')" class="text-primary">¿Olvidaste tu contraseña?</a>
            </div>
        </form>
    </div>

    <div id="forgotPasswordForm" class="login-form animated-form animate__animated animate__flipInX" style="display: none;">
        <h4 class="text-center">Recuperar contraseña</h4>
        <hr />

        <div id="forgotAlert" class="alert" style="display: none;"></div>

        <form id="formForgotPassword" onsubmit="return handleForgotPassword(event)">
            <div class="form-group">
                <label for="forgotEmail">Correo electrónico</label>
                <input type="email" id="forgotEmail" name="email" class="form-control" placeholder="Correo electrónico" required />
            </div>

            <div class="form-group">
                <button type="submit" id="btnForgot" class="btn btn-primary btn-block">
                    <span id="forgotSpinner" class="spinner-border spinner-border-sm" style="display: none;" role="status"></span>
                    <span id="forgotText">Enviar Solicitud</span>
                </button>
            </div>

            <div class="form-group text-center">
                <a href="#" onclick="toggleDivs('forgotPasswordForm','loginForm')" class="text-primary">Volver al inicio de sesión</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        // API Base URL
        const API_BASE_URL = 'http://localhost:5015/api';
        
        // ============================================
        // LOGIN HANDLER
        // ============================================
        async function handleLogin(event) {
            event.preventDefault();
            
            const email = document.getElementById('email').value.trim().toLowerCase();
            const password = document.getElementById('password').value;
            const returnUrl = document.getElementById('returnUrl').value;
            
            // Validation
            if (!email || !password) {
                showAlert('loginAlert', 'Por favor complete todos los campos', 'danger');
                return false;
            }
            
            setLoading('login', true);
            hideAlert('loginAlert');
            
            try {
                const response = await fetch(`${API_BASE_URL}/auth/login`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ email, password })
                });
                
                const data = await response.json();
                
                if (response.ok && data.accessToken) {
                    // Store tokens and user data in localStorage
                    localStorage.setItem('accessToken', data.accessToken);
                    localStorage.setItem('refreshToken', data.refreshToken);
                    localStorage.setItem('userId', data.user.userId);
                    localStorage.setItem('email', data.user.email);
                    localStorage.setItem('nombreCompleto', data.user.nombreCompleto);
                    localStorage.setItem('tipo', data.user.tipo);
                    localStorage.setItem('planId', data.user.planId || '0');
                    localStorage.setItem('vencimientoPlan', data.user.vencimientoPlan || '');
                    localStorage.setItem('roles', JSON.stringify(data.user.roles || []));
                    
                    // Show success message
                    showAlert('loginAlert', '¡Bienvenido! Redirigiendo...', 'success');
                    
                    // Debug: Log user data
                    console.log('Login response user:', data.user);
                    console.log('User tipo:', data.user.tipo, 'Type:', typeof data.user.tipo);
                    console.log('PlanId:', data.user.planId, 'Vencimiento:', data.user.vencimientoPlan);
                    
                    // Verificar si tiene plan activo
                    const planId = data.user.planId;
                    const vencimientoPlan = data.user.vencimientoPlan;
                    let tienePlanActivo = false;
                    
                    if (planId && planId !== 0 && planId !== '0') {
                        if (vencimientoPlan) {
                            const fechaVencimiento = new Date(vencimientoPlan);
                            const hoy = new Date();
                            tienePlanActivo = fechaVencimiento > hoy;
                        } else {
                            // Tiene planId pero no vencimiento, asumir activo
                            tienePlanActivo = true;
                        }
                    }
                    
                    console.log('Tiene plan activo:', tienePlanActivo);
                    
                    // Redirect based on user type and plan status
                    // Supports both formats: "1"/"2" (legacy) and "Empleador"/"Contratista" (text)
                    setTimeout(() => {
                        const tipo = String(data.user.tipo).toLowerCase();
                        console.log('Normalized tipo:', tipo);
                        
                        if (returnUrl && returnUrl !== '') {
                            window.location.href = returnUrl;
                        } else if (tipo === '1' || tipo === 'empleador') {
                            // Si no tiene plan activo, ir a AdquirirPlan
                            if (!tienePlanActivo) {
                                window.location.href = '/Empleador/AdquirirPlan';
                            } else {
                                window.location.href = '/Empleador';
                            }
                        } else if (tipo === '2' || tipo === 'contratista') {
                            // Si no tiene plan activo, ir a AdquirirPlan
                            if (!tienePlanActivo) {
                                window.location.href = '/Contratista/AdquirirPlan';
                            } else {
                                window.location.href = '/Contratista';
                            }
                        } else {
                            console.warn('Unknown user tipo:', data.user.tipo);
                            window.location.href = '/';
                        }
                    }, 500);
                    
                } else if (response.status === 401) {
                    showAlert('loginAlert', 'Usuario o contraseña incorrectos', 'danger');
                } else if (response.status === 403) {
                    // Account not activated
                    showAlert('loginAlert', 'Su cuenta aún no está activada. Por favor revise su correo electrónico.', 'warning');
                } else {
                    const errorMsg = data.message || data.title || 'Error al iniciar sesión';
                    showAlert('loginAlert', errorMsg, 'danger');
                }
                
            } catch (error) {
                console.error('Login error:', error);
                showAlert('loginAlert', 'Error de conexión. Verifique que el servidor esté disponible.', 'danger');
            } finally {
                setLoading('login', false);
            }
            
            return false;
        }
        
        // ============================================
        // FORGOT PASSWORD HANDLER
        // ============================================
        async function handleForgotPassword(event) {
            event.preventDefault();
            
            const email = document.getElementById('forgotEmail').value.trim().toLowerCase();
            
            if (!email) {
                showAlert('forgotAlert', 'Por favor ingrese su correo electrónico', 'danger');
                return false;
            }
            
            setLoading('forgot', true);
            hideAlert('forgotAlert');
            
            try {
                const response = await fetch(`${API_BASE_URL}/auth/forgot-password`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ email })
                });
                
                // Always show success message (security best practice - don't reveal if email exists)
                showAlert('forgotAlert', 'Si el correo existe en nuestro sistema, recibirá instrucciones para restablecer su contraseña.', 'success');
                
            } catch (error) {
                console.error('Forgot password error:', error);
                showAlert('forgotAlert', 'Error de conexión. Intente nuevamente.', 'danger');
            } finally {
                setLoading('forgot', false);
            }
            
            return false;
        }
        
        // ============================================
        // UTILITY FUNCTIONS
        // ============================================
        function toggleDivs(hideDivId, showDivId) {
            var hideDiv = document.getElementById(hideDivId);
            var showDiv = document.getElementById(showDivId);

            if (hideDiv && showDiv) {
                hideDiv.style.display = 'none';
                showDiv.style.display = 'block';
            }
        }

        function togglePasswordVisibility() {
            var passwordField = document.getElementById("password");
            var eyeIcon = document.getElementById("eyeIcon");

            if (passwordField.type === "password") {
                passwordField.type = "text";
                eyeIcon.classList.remove("fa-eye");
                eyeIcon.classList.add("fa-eye-slash");
            } else {
                passwordField.type = "password";
                eyeIcon.classList.remove("fa-eye-slash");
                eyeIcon.classList.add("fa-eye");
            }
        }
        
        function showAlert(elementId, message, type) {
            const alertDiv = document.getElementById(elementId);
            alertDiv.className = `alert alert-${type}`;
            alertDiv.textContent = message;
            alertDiv.style.display = 'block';
        }
        
        function hideAlert(elementId) {
            const alertDiv = document.getElementById(elementId);
            alertDiv.style.display = 'none';
        }
        
        function setLoading(prefix, isLoading) {
            const btn = document.getElementById(`btn${prefix.charAt(0).toUpperCase() + prefix.slice(1)}`);
            const spinner = document.getElementById(`${prefix}Spinner`);
            const text = document.getElementById(`${prefix}Text`);
            
            if (btn) btn.disabled = isLoading;
            if (spinner) spinner.style.display = isLoading ? 'inline-block' : 'none';
            if (text) text.textContent = isLoading ? 'Procesando...' : (prefix === 'login' ? 'Iniciar sesión' : 'Enviar Solicitud');
        }
        
        // Clear stored data if user is on login page
        document.addEventListener('DOMContentLoaded', function() {
            // Only clear if there's a message indicating logout or session expired
            const urlParams = new URLSearchParams(window.location.search);
            if (urlParams.get('logout') === 'true') {
                localStorage.clear();
                showAlert('loginAlert', 'Ha cerrado sesión correctamente.', 'success');
            }
        });
    </script>
}
