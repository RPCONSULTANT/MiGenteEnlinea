@{
    ViewData["Title"] = "Recuperar Contraseña";
    Layout = "_LayoutAuth";
}

<div class="login-container animate__animated animate__jello">
    <div class="login-form animate__animated animate__flipInY">
        <h4 class="text-center">Recuperar Contraseña</h4>
        <a href="/" target="_parent">
            <div style="text-align: center">
                <img src="~/images/logoMiGene.png" alt="Mi Gente en Línea" />
            </div>
        </a>
        <hr />

        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success">
                @TempData["Message"]
            </div>
        }

        <p class="text-muted text-center">
            Ingresa tu correo electrónico y te enviaremos instrucciones para recuperar tu contraseña.
        </p>

        <form asp-action="RecuperarPassword" method="post">
            @Html.AntiForgeryToken()
            
            <div class="form-group">
                <label for="email">Correo electrónico</label>
                <input type="email" id="email" name="email" class="form-control" placeholder="Correo electrónico" required />
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block">Enviar Solicitud</button>
            </div>

            <div class="form-group text-center">
                <a href="@Url.Action("Login", "Auth")" class="text-primary">Volver al inicio de sesión</a>
            </div>
        </form>
    </div>
</div>
