@{
    Layout = "~/Views/Shared/_LayoutLanding.cshtml";
    ViewData["Title"] = "Planes";
}

<div class="banner">
    <div class="banner-content">
        <h1 class="animate__animated animate__fadeInDown">Nuestros Planes</h1>
        <p class="animate__animated animate__fadeInUp">Elige el plan que mejor se adapte a tus necesidades</p>
    </div>
</div>

<section class="pricing-content sec-padding" style="padding: 60px 0;">
    <div class="container">
        <div class="section-title text-center">
            <h2>Planes Disponibles</h2>
        </div>
        <div class="row">
            <!-- Plan Empleador Básico -->
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="pricing_design">
                    <div class="single-pricing">
                        <div class="price-head">
                            <h2>Plan Básico</h2>
                            <h1>RD$ 500</h1>
                            <span>/mes</span>
                        </div>
                        <ul>
                            <li><i class="fa fa-check"></i> Hasta 5 empleados</li>
                            <li><i class="fa fa-check"></i> Gestión de nómina</li>
                            <li><i class="fa fa-check"></i> Recibos de pago</li>
                            <li><i class="fa fa-check"></i> Soporte por email</li>
                        </ul>
                        <a asp-action="Registrar" asp-controller="Auth" class="price_btn">Comenzar</a>
                    </div>
                </div>
            </div>

            <!-- Plan Empleador Profesional -->
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="pricing_design">
                    <div class="single-pricing" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                        <div class="price-head">
                            <h2 style="color: white;">Plan Profesional</h2>
                            <h1 style="color: white;">RD$ 1,200</h1>
                            <span style="color: white;">/mes</span>
                        </div>
                        <ul style="color: white;">
                            <li><i class="fa fa-check"></i> Hasta 20 empleados</li>
                            <li><i class="fa fa-check"></i> Gestión de nómina</li>
                            <li><i class="fa fa-check"></i> Contratos automáticos</li>
                            <li><i class="fa fa-check"></i> Cálculo TSS</li>
                            <li><i class="fa fa-check"></i> Soporte prioritario</li>
                        </ul>
                        <a asp-action="Registrar" asp-controller="Auth" class="price_btn" style="background: white; color: #764ba2;">Comenzar</a>
                    </div>
                </div>
            </div>

            <!-- Plan Empleador Enterprise -->
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="pricing_design">
                    <div class="single-pricing">
                        <div class="price-head">
                            <h2>Plan Enterprise</h2>
                            <h1>RD$ 2,500</h1>
                            <span>/mes</span>
                        </div>
                        <ul>
                            <li><i class="fa fa-check"></i> Empleados ilimitados</li>
                            <li><i class="fa fa-check"></i> Todas las funciones</li>
                            <li><i class="fa fa-check"></i> Abogado virtual</li>
                            <li><i class="fa fa-check"></i> API access</li>
                            <li><i class="fa fa-check"></i> Soporte 24/7</li>
                        </ul>
                        <a asp-action="Registrar" asp-controller="Auth" class="price_btn">Comenzar</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
