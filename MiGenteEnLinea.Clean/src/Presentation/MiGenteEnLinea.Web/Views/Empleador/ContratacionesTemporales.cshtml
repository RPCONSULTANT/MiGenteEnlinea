@model dynamic
@{
    Layout = "~/Views/Shared/_LayoutEmpleador.cshtml";
    ViewData["Title"] = "Contrataciones Temporales";
}

<div class="container bg-white col col-md-12 col-xs-12 pt-2" style="border-radius: 5px;">
    <div class="mb-3">
        <h3>Gestión de Contrataciones Temporales</h3>
    </div>

    <ul class="nav nav-tabs mb-3" id="tabsContrataciones" role="tablist">
        <li class="nav-item" role="presentation">
            <a class="nav-link active" id="contratacionesActivas-tab" data-toggle="tab" href="#contratacionesActivas" role="tab" aria-controls="contratacionesActivas" aria-selected="true">Contrataciones Activas</a>
        </li>
        <li class="nav-item" role="presentation">
            <a class="nav-link" id="historial-tab" data-toggle="tab" href="#historial" role="tab" aria-controls="historial" aria-selected="false">Historial</a>
        </li>
    </ul>

    <div class="tab-content" id="tabContent">
        <!-- Tab Contrataciones Activas -->
        <div class="tab-pane fade show active" id="contratacionesActivas" role="tabpanel" aria-labelledby="contratacionesActivas-tab">
            <div>
                <p>Registrar y gestiona la contratación de servicios de una manera centralizada y simple.</p>
            </div>
            <hr />

            <div class="row button-group mb-3">
                <button type="button" class="btn bg-primary text-white col-xs-12 col-md-2 mx-1" data-toggle="modal" data-target="#registroContratacionModal">
                    <i class="fa fa-plus"></i> Registrar Nuevo
                </button>
                <button type="button" class="btn bg-warning text-dark col-xs-12 col-md-2 mx-1" id="btnExportar">
                    <i class="fa fa-file"></i> Exportar
                </button>
            </div>
            <hr />

            <h3>Proveedores Registrados</h3>
            <hr />

            <div class="table-responsive">
                <table class="table table-striped table-bordered" id="gridActivas">
                    <thead>
                        <tr>
                            <th>Fecha Registro</th>
                            <th>Nombre</th>
                            <th>RNC/Cédula</th>
                            <th>Teléfono 1</th>
                            <th>Teléfono 2</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody id="tbodyActivas">
                        <!-- Se cargarán desde la API -->
                    </tbody>
                </table>
            </div>
            <hr />
        </div>

        <!-- Tab Historial -->
        <div class="tab-pane fade" id="historial" role="tabpanel" aria-labelledby="historial-tab">
            <div>
                <p>Historial de contrataciones de servicios.</p>
            </div>
            <hr />

            <div class="row button-group mb-3">
                <button type="button" class="btn bg-warning text-dark col-xs-12 col-md-2 mx-1">
                    <i class="fa fa-file"></i> Exportar
                </button>
            </div>
            <hr />

            <div class="table-responsive">
                <table class="table table-striped table-bordered" id="gridHistorial">
                    <thead>
                        <tr>
                            <th>Fecha</th>
                            <th>Proveedor</th>
                            <th>Servicio</th>
                            <th>Monto</th>
                            <th>Estado</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody id="tbodyHistorial">
                        <!-- Se cargarán desde la API -->
                    </tbody>
                </table>
            </div>
            <hr />
        </div>
    </div>
</div>

<!-- Modal Nueva Contratación -->
<div class="modal fade" id="registroContratacionModal" tabindex="-1" aria-labelledby="registroContratacionModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="registroContratacionModalLabel">Nueva Contratación de Servicio</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="formNuevaContratacion">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="ddlTipo" class="form-label">Tipo de Proveedor</label>
                        <select class="form-control" id="ddlTipo" name="TipoProveedor">
                            <option value="1" selected>Persona Física</option>
                            <option value="2">Empresa</option>
                        </select>
                    </div>

                    <!-- Sección Persona Física -->
                    <div id="divPersonaFisica">
                        <h5>Información General</h5>

                        <div class="mb-3 text-center" id="divFoto" style="display: none;">
                            <img id="fotoProveedor" src="" width="200" class="img-thumbnail" />
                        </div>

                        <div class="mb-3">
                            <label for="identificacion" class="form-label"># Identificación</label>
                            <div class="input-group">
                                <input type="text" class="form-control" id="txtIdentificacion" name="Identificacion" required />
                                <button type="button" class="btn btn-info" id="btnBuscarCedula">Validar Cédula</button>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="nombre" class="form-label">Nombre</label>
                                    <input type="text" class="form-control" id="nombre" name="Nombre" required />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="apellido" class="form-label">Apellido</label>
                                    <input type="text" class="form-control" id="apellido" name="Apellido" required />
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="alias" class="form-label">Alias/Apodo</label>
                            <input type="text" class="form-control" id="alias" name="Alias" />
                        </div>
                    </div>

                    <!-- Sección Empresa -->
                    <div id="divEmpresa" style="display:none;">
                        <h5>Información de Empresa</h5>

                        <div class="mb-3">
                            <label for="rnc" class="form-label">RNC</label>
                            <input type="text" class="form-control" id="rnc" name="RNC" />
                        </div>

                        <div class="mb-3">
                            <label for="razonSocial" class="form-label">Razón Social</label>
                            <input type="text" class="form-control" id="razonSocial" name="RazonSocial" />
                        </div>

                        <div class="mb-3">
                            <label for="nombreComercial" class="form-label">Nombre Comercial</label>
                            <input type="text" class="form-control" id="nombreComercial" name="NombreComercial" />
                        </div>
                    </div>

                    <hr />

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="telefono1" class="form-label">Teléfono 1</label>
                                <input type="text" class="form-control" id="telefono1" name="Telefono1" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="telefono2" class="form-label">Teléfono 2</label>
                                <input type="text" class="form-control" id="telefono2" name="Telefono2" />
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="direccion" class="form-label">Dirección</label>
                        <input type="text" class="form-control" id="direccion" name="Direccion" maxlength="250" />
                    </div>

                    <hr />
                    <h5>Información de Contratación</h5>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="servicioDescripcion" class="form-label">Descripción del Servicio</label>
                                <textarea class="form-control" id="servicioDescripcion" name="ServicioDescripcion" rows="3"></textarea>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="montoContratacion" class="form-label">Monto</label>
                                <input type="number" step="0.01" class="form-control" id="montoContratacion" name="Monto" placeholder="0.00" />
                            </div>
                            <div class="mb-3">
                                <label for="fechaServicio" class="form-label">Fecha del Servicio</label>
                                <input type="date" class="form-control" id="fechaServicio" name="FechaServicio" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                    <button type="submit" class="btn btn-success">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        $(document).ready(function () {
            loadContrataciones();

            // Mostrar/ocultar secciones según tipo
            $('#ddlTipo').change(function () {
                if ($(this).val() === '2') {
                    $('#divPersonaFisica').hide();
                    $('#divEmpresa').show();
                } else {
                    $('#divPersonaFisica').show();
                    $('#divEmpresa').hide();
                }
            });
        });

        function loadContrataciones() {
            // TODO: Cargar desde API
        }

        // Validar cédula
        $('#btnBuscarCedula').click(function () {
            var cedula = $('#txtIdentificacion').val();
            if (cedula.length >= 11) {
                Swal.fire('Info', 'Consultando padrón electoral...', 'info');
                // TODO: Llamar API de padrón
            } else {
                Swal.fire('Error', 'Ingrese una cédula válida', 'error');
            }
        });

        // Guardar contratación
        $('#formNuevaContratacion').submit(function (e) {
            e.preventDefault();
            // TODO: Enviar a API
            Swal.fire('Éxito', 'Contratación registrada correctamente', 'success');
            $('#registroContratacionModal').modal('hide');
        });

        // Ver ficha de proveedor
        function verFicha(contratacionId) {
            window.location.href = '/Empleador/FichaProveedor/' + contratacionId;
        }
    </script>
}
