@model dynamic
@{
    Layout = "~/Views/Shared/_LayoutEmpleador.cshtml";
    ViewData["Title"] = "Mi Perfil";
}

<div class="container">
    <h3 style="color: white">Información de Perfil</h3>
    
    <form id="formPerfil">
        <div class="form-control bg-white p-4">
            
            <div class="mb-3">
                <label for="tipoCuenta" class="form-label">Tipo de Cuenta</label>
                <select class="form-select" id="tipoCuenta" name="TipoCuenta" disabled>
                    <option value="1" selected>Empleador</option>
                    <option value="2">Contratista</option>
                </select>
            </div>

            <div class="mb-3">
                <label for="tipoIdentificacion" class="form-label">Tipo de Perfil</label>
                <select class="form-select" id="ddlTipoIdentificacion" name="TipoPerfil">
                    <option value="1">Persona Física</option>
                    <option value="2">Empresa</option>
                </select>
            </div>

            <div class="mb-3">
                <label for="nombre" class="form-label">Información de Registro</label>
                <input type="text" class="form-control" id="nombre" name="Nombre" placeholder="Nombre" required />
            </div>

            <div class="mb-3">
                <input type="text" class="form-control" id="apellido" name="Apellido" placeholder="Apellido" required />
            </div>

            <div class="mb-3">
                <label for="identificacion" class="form-label">RNC/Cédula</label>
                <input type="text" class="form-control" id="txtIdentificacion" name="Identificacion" required />
            </div>

            <!-- Sección Empresa (visible solo si es tipo Empresa) -->
            <div id="divEmpresa" style="display:none;">
                <div class="mb-3">
                    <label for="nombreComercial" class="form-label">Información Comercial</label>
                    <input type="text" class="form-control" id="nombreComercial" name="NombreComercial" placeholder="Nombre Comercial" />
                </div>

                <div class="mb-3">
                    <h4>Representante Legal</h4>
                </div>

                <div class="mb-3">
                    <label for="nombreGerente" class="form-label">Nombre</label>
                    <input type="text" class="form-control" id="txtNombreGerente" name="NombreGerente" placeholder="Nombre Representante Legal" />
                </div>

                <div class="mb-3">
                    <label for="apellidoGerente" class="form-label">Apellido</label>
                    <input type="text" class="form-control" id="txtApellidoGerente" name="ApellidoGerente" placeholder="Apellido Representante Legal" />
                </div>

                <div class="mb-3">
                    <label for="direccionGerente" class="form-label">Domicilio</label>
                    <input type="text" class="form-control" id="txtDireccionGerente" name="DireccionGerente" placeholder="Dirección" maxlength="250" />
                </div>
            </div>

            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" id="email" name="Email" required />
            </div>

            <div class="mb-3">
                <label for="telefono1" class="form-label">Teléfonos</label>
                <input type="tel" class="form-control" id="telefono1" name="Telefono1" placeholder="(___)-___-____" />
            </div>

            <div class="mb-3">
                <input type="tel" class="form-control" id="telefono2" name="Telefono2" placeholder="(___)-___-____" />
            </div>

            <div class="mb-3">
                <label for="direccion" class="form-label">Dirección</label>
                <input type="text" class="form-control" id="direccion" name="Direccion" maxlength="250" required />
            </div>

            <button type="submit" class="btn btn-success" id="btnGuardar">
                <i class="fa fa-save"></i> Actualizar Perfil
            </button>
        </div>
    </form>

    <hr class="bg-white" />

    <!-- Credenciales de Acceso -->
    <div class="row bg-white p-3 mt-3 rounded">
        <div class="col-md-9">
            <h4>Credenciales de Acceso</h4>
        </div>
        <div class="col-md-3 text-right">
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalNuevoUsuario">
                <i class="fa fa-plus"></i> Nuevo
            </button>
        </div>
    </div>

    <div class="table-responsive bg-white p-3 rounded">
        <table class="table table-bordered table-striped" id="tablaUsuarios">
            <thead>
                <tr>
                    <th style="display: none;">ID</th>
                    <th>Email</th>
                    <th>Password</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody id="tbodyUsuarios">
                <!-- Se cargarán desde la API -->
            </tbody>
        </table>
    </div>
</div>

<!-- Modal Editar Contraseña -->
<div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editModalLabel">Modificar Contraseña</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="formEditPassword">
                <div class="modal-body">
                    <input type="hidden" id="editUserId" />
                    <div class="mb-3">
                        <label for="txtModalPassword" class="form-label">Nueva Contraseña</label>
                        <div class="input-group">
                            <input type="password" class="form-control" id="txtModalPassword" name="Password" required />
                            <button type="button" class="btn btn-outline-secondary" onclick="togglePassword()">
                                <i class="fa fa-eye"></i>
                            </button>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Guardar cambios</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal Nuevo Usuario -->
<div class="modal fade" id="modalNuevoUsuario" tabindex="-1" role="dialog" aria-labelledby="modalNuevoUsuarioLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalNuevoUsuarioLabel">Nuevo Usuario</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="formNuevoUsuario">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="correo" class="form-label">Correo Electrónico</label>
                        <input type="email" class="form-control" id="correo" name="Email" placeholder="Correo Electrónico" required />
                    </div>
                    <div class="mb-3">
                        <label for="contrasena" class="form-label">Contraseña</label>
                        <input type="password" class="form-control" id="contrasena" name="Password" placeholder="Contraseña" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>

