@{
    ViewData["Title"] = "Contrataciones Temporales";
    Layout = "_LayoutEmpleador";
}

<div class="container-fluid mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Empleador" asp-action="Index">Dashboard</a></li>
            <li class="breadcrumb-item active" aria-current="page">Contrataciones Temporales</li>
        </ol>
    </nav>
</div>

<div class="container-fluid bg-white p-4" style="border-radius: 5px;">
    <div class="mb-3">
        <h2>Gestión de Contrataciones Temporales</h2>
        <p class="text-muted">Administra tus contrataciones de servicios temporales con proveedores independientes.</p>
    </div>

    <div class="row mb-3">
        <div class="col-md-8">
            <div class="btn-group" role="group">
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalNuevaContratacion">
                    <i class="fa fa-plus"></i> Nueva Contratación
                </button>
                <a asp-controller="Empleador" asp-action="Calificaciones" class="btn btn-secondary">
                    <i class="fa fa-star"></i> Calificar Perfil
                </a>
                <button type="button" class="btn btn-warning" id="btnExportar">
                    <i class="fa fa-file"></i> Exportar
                </button>
            </div>
        </div>
        <div class="col-md-4">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Buscar contratación..." id="txtBuscar">
                <button class="btn btn-outline-secondary" type="button" id="btnBuscar">
                    <i class="fa fa-search"></i>
                </button>
            </div>
        </div>
    </div>

    <!-- Tabs -->
    <ul class="nav nav-tabs mb-3" id="tabsContrataciones" role="tablist">
        <li class="nav-item" role="presentation">
            <a class="nav-link active" id="activas-tab" data-bs-toggle="tab" href="#activas" role="tab">
                Contrataciones Activas <span class="badge bg-primary">0</span>
            </a>
        </li>
        <li class="nav-item" role="presentation">
            <a class="nav-link" id="completadas-tab" data-bs-toggle="tab" href="#completadas" role="tab">
                Completadas <span class="badge bg-success">0</span>
            </a>
        </li>
        <li class="nav-item" role="presentation">
            <a class="nav-link" id="canceladas-tab" data-bs-toggle="tab" href="#canceladas" role="tab">
                Canceladas <span class="badge bg-danger">0</span>
            </a>
        </li>
    </ul>

    <div class="tab-content" id="tabContent">
        <!-- Contrataciones Activas -->
        <div class="tab-pane fade show active" id="activas" role="tabpanel">
            <div class="table-responsive">
                <table class="table table-striped table-bordered" id="gridActivas">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Contratista</th>
                            <th>Servicio</th>
                            <th>Fecha Inicio</th>
                            <th>Fecha Fin</th>
                            <th>Monto</th>
                            <th>Estado</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td colspan="8" class="text-center text-muted">
                                <i class="fa fa-briefcase fa-3x mb-3 d-block"></i>
                                No hay contrataciones activas.
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Contrataciones Completadas -->
        <div class="tab-pane fade" id="completadas" role="tabpanel">
            <div class="table-responsive">
                <table class="table table-striped table-bordered" id="gridCompletadas">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Contratista</th>
                            <th>Servicio</th>
                            <th>Fecha Inicio</th>
                            <th>Fecha Fin</th>
                            <th>Monto Pagado</th>
                            <th>Calificación</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td colspan="8" class="text-center text-muted">No hay contrataciones completadas.</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Contrataciones Canceladas -->
        <div class="tab-pane fade" id="canceladas" role="tabpanel">
            <div class="table-responsive">
                <table class="table table-striped table-bordered" id="gridCanceladas">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Contratista</th>
                            <th>Servicio</th>
                            <th>Fecha Cancelación</th>
                            <th>Motivo</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td colspan="6" class="text-center text-muted">No hay contrataciones canceladas.</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Modal Nueva Contratación -->
<div class="modal fade" id="modalNuevaContratacion" tabindex="-1" aria-labelledby="modalNuevaContratacionLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="modalNuevaContratacionLabel">Nueva Contratación Temporal</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="formNuevaContratacion">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Buscar Contratista</label>
                                <div class="input-group">
                                    <input type="text" class="form-control" id="txtBuscarContratista" placeholder="Cédula o nombre...">
                                    <button class="btn btn-outline-secondary" type="button" id="btnBuscarContratista">
                                        <i class="fa fa-search"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Nombre del Contratista</label>
                                <input type="text" class="form-control" id="nombreContratista" readonly>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Servicio a Contratar</label>
                                <select class="form-select" id="servicioContratado" required>
                                    <option value="">-- Seleccione --</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Fecha de Inicio</label>
                                <input type="date" class="form-control" id="fechaInicioContrato" required>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Fecha de Fin (Estimada)</label>
                                <input type="date" class="form-control" id="fechaFinContrato">
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Monto Acordado</label>
                                <div class="input-group">
                                    <span class="input-group-text">RD$</span>
                                    <input type="number" class="form-control" id="montoContrato" step="0.01" required>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Descripción del Trabajo</label>
                        <textarea class="form-control" id="descripcionTrabajo" rows="3" maxlength="500"></textarea>
                    </div>
                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" id="chkTerminos" required>
                        <label class="form-check-label" for="chkTerminos">
                            Acepto los <a href="#" target="_blank">términos y condiciones</a> de contratación temporal
                        </label>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-success" id="btnCrearContratacion">
                    <i class="fa fa-check"></i> Crear Contratación
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Modal Detalle Contratación -->
<div class="modal fade" id="modalDetalleContratacion" tabindex="-1" aria-labelledby="modalDetalleContratacionLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalDetalleContratacionLabel">Detalle de Contratación</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- El contenido se carga dinámicamente -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-success" id="btnPagarContratacion">
                    <i class="fa fa-money"></i> Realizar Pago
                </button>
                <button type="button" class="btn btn-danger" id="btnCancelarContratacion">
                    <i class="fa fa-times"></i> Cancelar Contratación
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        $(document).ready(function() {
            // Cargar contrataciones desde API
            // TODO: Implementar llamadas a API
            
            // Buscar contratista
            $('#btnBuscarContratista').on('click', function() {
                var busqueda = $('#txtBuscarContratista').val();
                if (!busqueda) {
                    Swal.fire('Error', 'Ingrese un término de búsqueda.', 'error');
                    return;
                }
                // TODO: Buscar contratista via API
            });
            
            // Crear contratación
            $('#btnCrearContratacion').on('click', function() {
                if (!$('#chkTerminos').is(':checked')) {
                    Swal.fire('Error', 'Debe aceptar los términos y condiciones.', 'error');
                    return;
                }
                
                Swal.fire({
                    title: 'Crear Contratación',
                    text: '¿Confirma la creación de esta contratación temporal?',
                    icon: 'question',
                    showCancelButton: true,
                    confirmButtonColor: '#28a745',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Sí, crear',
                    cancelButtonText: 'Cancelar'
                }).then((result) => {
                    if (result.isConfirmed) {
                        // TODO: Llamar API para crear contratación
                        $('#modalNuevaContratacion').modal('hide');
                        Swal.fire('Éxito', 'La contratación ha sido creada correctamente.', 'success');
                    }
                });
            });
            
            // Cancelar contratación
            $('#btnCancelarContratacion').on('click', function() {
                Swal.fire({
                    title: 'Cancelar Contratación',
                    text: '¿Estás seguro que deseas cancelar esta contratación?',
                    icon: 'warning',
                    input: 'text',
                    inputLabel: 'Motivo de cancelación',
                    inputPlaceholder: 'Ingrese el motivo...',
                    showCancelButton: true,
                    confirmButtonColor: '#d33',
                    cancelButtonColor: '#6c757d',
                    confirmButtonText: 'Sí, cancelar',
                    cancelButtonText: 'No'
                }).then((result) => {
                    if (result.isConfirmed && result.value) {
                        // TODO: Llamar API para cancelar
                        $('#modalDetalleContratacion').modal('hide');
                        Swal.fire('Cancelado', 'La contratación ha sido cancelada.', 'success');
                    }
                });
            });
        });
    </script>
}
