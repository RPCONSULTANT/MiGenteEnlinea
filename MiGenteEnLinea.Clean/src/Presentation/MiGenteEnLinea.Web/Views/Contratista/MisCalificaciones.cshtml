@{
    ViewData["Title"] = "Mis Calificaciones";
    Layout = "_LayoutContratista";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <h2 class="headerText">Mis Calificaciones</h2>
            <hr />
        </div>
    </div>

    <!-- Summary Stats -->
    <div class="row">
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card shadow text-center">
                <div class="card-body">
                    <h5 class="card-title text-muted">Promedio General</h5>
                    <h2 class="text-warning">
                        4.5 <i class="fa fa-star"></i>
                    </h2>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card shadow text-center">
                <div class="card-body">
                    <h5 class="card-title text-muted">Total Calificaciones</h5>
                    <h2 class="text-primary">0</h2>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card shadow text-center">
                <div class="card-body">
                    <h5 class="card-title text-muted">5 Estrellas</h5>
                    <h2 class="text-success">0</h2>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card shadow text-center">
                <div class="card-body">
                    <h5 class="card-title text-muted">Últimos 30 días</h5>
                    <h2 class="text-info">0</h2>
                </div>
            </div>
        </div>
    </div>

    <!-- Rating Distribution -->
    <div class="row">
        <div class="col-lg-6 mb-4">
            <div class="card shadow">
                <div class="card-header">
                    <h6>Distribución de Calificaciones</h6>
                </div>
                <div class="card-body">
                    <div class="d-flex align-items-center mb-2">
                        <span class="mr-2">5 <i class="fa fa-star text-warning"></i></span>
                        <div class="progress flex-grow-1" style="height: 20px;">
                            <div class="progress-bar bg-success" role="progressbar" style="width: 0%"></div>
                        </div>
                        <span class="ml-2">0</span>
                    </div>
                    <div class="d-flex align-items-center mb-2">
                        <span class="mr-2">4 <i class="fa fa-star text-warning"></i></span>
                        <div class="progress flex-grow-1" style="height: 20px;">
                            <div class="progress-bar bg-info" role="progressbar" style="width: 0%"></div>
                        </div>
                        <span class="ml-2">0</span>
                    </div>
                    <div class="d-flex align-items-center mb-2">
                        <span class="mr-2">3 <i class="fa fa-star text-warning"></i></span>
                        <div class="progress flex-grow-1" style="height: 20px;">
                            <div class="progress-bar bg-warning" role="progressbar" style="width: 0%"></div>
                        </div>
                        <span class="ml-2">0</span>
                    </div>
                    <div class="d-flex align-items-center mb-2">
                        <span class="mr-2">2 <i class="fa fa-star text-warning"></i></span>
                        <div class="progress flex-grow-1" style="height: 20px;">
                            <div class="progress-bar bg-secondary" role="progressbar" style="width: 0%"></div>
                        </div>
                        <span class="ml-2">0</span>
                    </div>
                    <div class="d-flex align-items-center mb-2">
                        <span class="mr-2">1 <i class="fa fa-star text-warning"></i></span>
                        <div class="progress flex-grow-1" style="height: 20px;">
                            <div class="progress-bar bg-danger" role="progressbar" style="width: 0%"></div>
                        </div>
                        <span class="ml-2">0</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-6 mb-4">
            <div class="card shadow">
                <div class="card-header">
                    <h6>Comentarios Recientes</h6>
                </div>
                <div class="card-body">
                    <p class="text-muted text-center">No hay comentarios recientes.</p>
                </div>
            </div>
        </div>
    </div>

    <!-- All Reviews List -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header">
                    <h6>Todas las Calificaciones</h6>
                </div>
                <div class="card-body">
                    <p class="text-muted text-center">
                        <i class="fa fa-star-o fa-3x mb-3"></i>
                        <br />
                        Aún no tienes calificaciones.
                        <br />
                        <small>Las calificaciones aparecerán aquí cuando los empleadores evalúen tu trabajo.</small>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
