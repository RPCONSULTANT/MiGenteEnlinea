@model dynamic
@{
    Layout = "~/Views/Shared/_LayoutContratista.cshtml";
    ViewData["Title"] = "Mi Suscripción";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0" style="color:white">Gestión de Suscripción</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label">Plan Actual</label>
                        <input type="text" class="form-control" id="txtPlanActual" readonly value="@ViewBag.PlanActual" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Fecha de Inicio</label>
                        <input type="text" class="form-control" id="txtFechaInicio" readonly value="@ViewBag.FechaInicio" />
                    </div>
                    <div class="mb-3" id="proxPago">
                        <label class="form-label">Próximo Pago</label>
                        <input type="text" class="form-control" id="txtProximoPago" readonly value="@ViewBag.ProximoPago" />
                    </div>

                    <div class="mb-3" style="margin-block:10px">
                        <button type="button" class="btn btn-primary col-md-4 col-12" id="btnDetalles" style="display:none;">
                            Ver Detalles
                        </button>
                        <button type="button" class="btn btn-danger col-md-5 col-12" id="btnCancelar">
                            Cancelar Suscripción
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container mt-2">
    <h5>Histórico de Facturación</h5>
</div>

<div class="container mt-2">
    <div class="table-responsive">
        <table class="table table-striped table-bordered" id="gridPagos">
            <thead>
                <tr>
                    <th>Fecha</th>
                    <th>Id Plan</th>
                    <th>Precio</th>
                    <th>Tarjeta</th>
                </tr>
            </thead>
            <tbody id="tbodyPagos">
                <!-- Se cargarán desde la API -->
            </tbody>
        </table>
    </div>
</div>

