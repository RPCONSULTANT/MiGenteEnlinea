        // Cancelar suscripción
        $('#btnCancelar').click(function () {
            Swal.fire({
                title: '¿Cancelar suscripción?',
                text: 'Tu suscripción permanecerá activa hasta la fecha de vencimiento',
                icon: 'warning',
                showCancelButton: true,
